<h3>Add a subject to this institution teaches</h3>

<div class="row">
  <div class="col-md-7">
    <form action="/admin/subjects/new" method="post">
      <label for="subject">Subject Name</label>
      <input type="text" name="subject" class="form-control">
      <br>
      <button type="submit" name="button">Add subject</button>
    </form>
  </div>
</div>

<% if @subjects.any?%>
<h3>Listed subjects</h3>
  <ul>
    <% @subjects.each do |subject| %>
    <li><%= subject.name%></li>
  </ul>
  <% end %>
  <% else %>
  <p>Nothing is taught here</p>
  <% end %>
