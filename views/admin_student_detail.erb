<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2 class="h2 text-primary">Student Details</h2>
      <h4 class="text-success">Name: <em><%= @student_details.name%></em></h4>
      <br>
      <h4 class="text-success">Level: <em><%= @student_details.level%></em></h4>
      <br>
      <h4 class="text-success">Stream: <em><%= @student_details.stream%></em></h4>
      <br>
      <h4 class="text-success">Fee: <em><%= @student_details.fee%></em></h4>
      <br>
      <h4 class="text-success">Dormitory: <em><%= @student_details.dormitory%></em></h4>
      <br>
      <h4 class="text-success">Clubs: <em><%= @student_details.clubs%></em></h4>

    </div>
    <div class="col-md-6">
      <h2 class="h2 text-primary">Assignments</h2>
      <hr>

      <%if @assignments.any?%>
          <ul>
              <% @assignments.each do |assignment|%>
                  <%= assignment.subject%> || <%= assignment.content%>
              <%end%>
          </ul>
      <%else%>
          <p>No assignments for your class at the moment</p>
      <%end%>
    </div>
  </div>

  <h3>Grades</h3>
  <hr>
  <% if @perfomances.any?%>
   <ul>
     <% @perfomances.each do |perfomance|%>
     <h3><%= @student_details.name%>'s perfomance</h3>
     <div class="table-responsive">
  <table class="table">
   <thead>
     <tr>
       <th>Subject</th>
       <th>Cat 1</th>
       <th>cat 2</th>
       <th>Cat 3</th>
       <th>Total(%)</th>
       <th>Grade</th>
       <th>Position in subject</th>
       <th>Teacher's comments</th>
     </tr>
   </thead>
   <tbody>
     <tr>
       <td><%= perfomance.subject_name%></td>
       <td><%= perfomance.cat1%></td>
       <td><%= perfomance.cat2%></td>
       <td><%= perfomance.cat3%></td>
       <td><%= perfomance.total%></td>
       <td><%= perfomance.grade%></td>
       <td><%= perfomance.position%></td>
       <td><%= perfomance.comments%></td>
     </tr>
   </tbody>
  </table>
  </div>
  </div>
      <% end %>
   </ul>
    <% else %>
    <p>No grades available</p>
    <% end %>
  <button type="submit" name="button" class="btn btn-danger">Delete student</button>

  <h3><%= @student_details.name%>'s Parents/gurdians</h3>

  <% if @parent_details.any?%>
  <% @parent_details.each do |parent|%>
  <%= parent.name%>
  <br>
  <%= parent.phone%>
  <br>
  <%= parent.email%>
  <br>
  <%= parent.username%>
  <br>
  <%end%>
  <%else%>
  <p>no parent</p>
  <%end%>

  <hr>
<div class="add_parent row">
  <div class="col-md-5">
    <button type="button" name="button" class= "btn btn-default btn-lg" id="parentAddForm" style="text-align:center">Add Parent Information</button>
  <div class="parentAddForm">
  <form action="/parents" method="post">
    <h3>Add parent information for this student?</h3>
    <input type="hidden" name="id" id="id" value="<%= @student_details.id %>">
    <div class="form-group">
      <label for="name">Parent Name:</label>
      <input type="text" name="parent_name" id="parent_name" class="form-control" required>
    </div>

    <div class="form-group">
      <label for="phone">Telephone:</label>
      <input type="text" name="phone" id="phone" class="form-control" required>
    </div>
    <div class="form-group">
      <label for="email">Email Address:</label>
      <input type="email" name="email" id="email" class="form-control" required>
    </div>
    <div class="form-group">
      <label for="username">Username:</label>
      <input type="text" name="username" id="username" class="form-control" required>
    </div>
    <div class="form-group">
      <label for="password">Password:</label>
      <input type="password" name="password" id="password" class="form-control" required>
    </div>

    <button type="submit" class="btn">Add Parent</button>
  </form>
</div>
</div>
</div>
